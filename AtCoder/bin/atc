#!/bin/sh

set -eu

usage()
{
  echo ''
  echo 'C++:' 1>&2
  echo 'cp abc xxx       [C++] ABCxxx を VSCode で開く' 1>&2
  echo 'cp arc xxx       [C++] ARCxxx を VSCode で開く' 1>&2
  echo 'cp agc xxx       [C++] AGCxxx を VSCode で開く' 1>&2
  echo 'cp mono xxx      [C++] xxx.cpp という名前のファイルを mono フォルダに作って VSCode で開く' 1>&2
  echo ''
  echo 'Python:' 1>&2
  echo 'py abc xxx       [Python] ABCxxx を VSCode で開く' 1>&2
  echo 'py arc xxx       [Python] ARCxxx を VSCode で開く' 1>&2
  echo 'py agc xxx       [Python] AGCxxx を VSCode で開く' 1>&2
  echo 'py mono xxx      [Python] xxx.py という名前のファイルを mono フォルダに作って VSCode で開く' 1>&2
}
